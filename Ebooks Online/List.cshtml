@{
    Page.Title = "Title goes here";
    Layout = "~/_BookListLayout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="row">
            <div class="col-md-1">
                <div class="btn-group-vertical" role="group" aria-label="...">
                    <button type="button" class="btn btn-default">Auteur</button>
                    <button type="button" class="btn btn-default">Talen</button>
                    <button type="button" class="btn btn-default">Serie</button>
                    <button type="button" class="btn btn-default">Formats</button>
                    <button type="button" class="btn btn-default">Uitgever</button>
                    <button type="button" class="btn btn-default">Beoordeling</button>
                    <button type="button" class="btn btn-default">Nieuws</button>
                    <button type="button" class="btn btn-default">Tags</button>
                    <button type="button" class="btn btn-default">Aangevers</button>
                </div>
            </div>
            <div class="col-md-8">
                <h2>Condensed Table</h2>
                <p>The .table-condensed class makes a table more compact by cutting cell padding in half:</p>
                <table class="table table-condensed">
                    <thead>
                        <tr>
                            <th>Titel</th>
                            <th>Auteur</th>
                            <th>Datum</th>
                            <th>Grootte (mb)</th>
                            <th>Beoordeling</th>
                            <th>Tags</th>
                            <th>Serie</th>
                            <th>Uitgever</th>
                            <th>Uitgave-datum</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>John</td>
                            <td>Doe</td>
                            <td>john@example.com</td>
                        </tr>
                        <tr>
                            <td>Mary</td>
                            <td>Moe</td>
                            <td>mary@example.com</td>
                        </tr>
                        <tr>
                            <td>July</td>
                            <td>Dooley</td>
                            <td>july@example.com</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="col-md-3">.col-md-4</div>
        </div>
    </div>
</div>